{
  "name": "kalpira",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "author": "Kalpira Team",
  "description": "AI Interview Coach Desktop App",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server:dev": "node server/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run server:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/genai": "^1.0.0",
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/drawing_utils": "^0.3.1675466124",
    "@mediapipe/face_detection": "^0.4.1646425229",
    "@prisma/client": "^5.22.0",
    "arctic": "^3.7.0",
    "axios": "^1.13.5",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "framer-motion": "^11.0.0",
    "jose": "^5.9.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.460.0",
    "next": "^14.2.0",
    "prisma": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.0",
    "recharts": "^3.7.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "eslint": "^8",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.kalpira.app",
    "productName": "Kalpira AI Coach",
    "files": [
      "electron/**/*",
      "server/**/*",
      "public/**/*",
      ".next/**/*",
      "next.config.js",
      "package.json",
      "prisma/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!src/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
